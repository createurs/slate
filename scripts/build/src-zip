#!/usr/bin/env node

const fs = require('fs');
const archiver = require('archiver');

module.exports = (function() {
  const output = fs.createWriteStream('upload/slate-src.zip');
  const archive = archiver('zip');

  output.on('close', () => {
    console.log(`slate-src.zip: ${archive.pointer()} total bytes`);
  });

  archive.on('error', (err) => {
    throw err;
  });

  archive.pipe(output);

  archive.file('config-sample.yml');
  archive.directory('src');

  archive.finalize();
})();
